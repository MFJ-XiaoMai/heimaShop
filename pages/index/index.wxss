/* 2.0 轮播图 */
.slider,
.slider-image{
  width: 100%;
  height: 340rpx;
}

/* 3.0 首页入口导航 */
.entry{
  display: flex;
  padding: 28rpx 0;
}
.entry-item{
  flex: 1;
  text-align: center;
}
.entry-item-image{
  width: 128rpx;
  height: 140rpx;
}

/* 4.0 首页楼层 */
.floor-title{
  width: 100%;
  height: 86rpx;
  background-color: #f4f4f4;
}

.floor-title-image{
  margin-top: 28rpx;
  width: 100%;
  height: 59rpx;
}
.floor-content{
  padding: 20rpx 17rpx;
  display: flex;
}
.floor-content-left-image{
  width: 232rpx;
  height: 386rpx;
}
.floor-content-right-image{
  width: 232rpx;
  height: 188rpx;
  margin-left: 10rpx;
}

/* 5.0 返回顶部 */
.top{
  width: 90rpx;
  height: 90rpx;
  background-color: rgba(211, 220, 220, .8);
  border-radius: 50%;
  position: fixed;
  right: 20rpx;
  bottom:100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  padding-bottom: 18rpx;
  box-sizing: border-box;
}
.top-up{
  width: 40rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  padding-bottom: 12rpx;
  box-sizing: border-box;
  font-weight: 700;
  color: rgba(0, 0, 0, .7);
}

